<%

  fiat_type   = @presenter_obj.client_fiat_curreny_symbol;
  client_token_to_fiat_conversion_rate = @presenter_obj.client_balances.ost_to_fiat_conversion_factor(fiat_type) * @presenter_obj.client_token.conversion_rate

  if @presenter_obj.client_balances.present?
    ost_balance = @presenter_obj.client_balances.ost_balance
  else
    ost_balance = 0
  end

  if @presenter_obj.client_token.pending_critical_interaction_id.present?
    pending_critical_interaction_id = @presenter_obj.client_token.pending_critical_interaction_id
  end

