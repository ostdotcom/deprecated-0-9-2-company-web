<%

  fiat_type   = @presenter_obj.client_fiat_curreny_symbol;
  ost_to_fiat = @presenter_obj.client_balances.ost_to_fiat_conversion_factor(fiat_type)
  ost_fiat_balance = @presenter_obj.client_balances.ost_fiat_balance(fiat_type)

  if @presenter_obj.client_balances.present?
    ost_balance = @presenter_obj.client_balances.ost_balance
  else
    ost_balance = 0
  end

  bt_st_primt_ratio = 0.9
  indicative_bt_to_mint =  (bt_st_primt_ratio * ost_balance).to_i
  indicative_stp_to_mint =  ((1-bt_st_primt_ratio) * ost_balance).to_i

%>
<div class="row">
  <div class="col-12">
    <h3 class="mb-3">Mint Tokens</h3>
  </div>
</div>
<div class="row">
  <div class="col-12">
    <div class="row">
      <div class="col-12 col-sm-4 st-form">
        <div class="form-group">
          <label class="form-label" for="tokens">TOKENS TO MINT</label>
          <input type="text" class="form-control" id="tokens" name="tokens"/>
        </div>
        <div class="card card-bg">
          <div class="card-body text-uppercase">
            <h5 class="card-title mb-1">TOKEN VALUE IN USD</h5>
            <p class="card-text mb-1">
              <span class="blue"><%= ost_fiat_balance %></span>
            </p>
          </div>
        </div>
      </div>
      <div class="col-12 col-sm-4 st-form">
        <h6>OST SUPPLY</h6>
      </div>
      <div class="col-12 col-sm-4">
        <h6 class="invisible">OST SUPPLY</h6>
        <ul>
          <li class="d-flex align-items-center mb-3">
            <span class="ost-supply available"></span>
            <p class="m-0 ml-2">
              <small class="d-block">OST Available</small>
              <small class="d-block"><%= ost_balance %></small>
            </p>
          </li>
          <li class="d-flex align-items-center mb-3">
            <span class="ost-supply allocated"></span>
            <p class="m-0 ml-2">
              <small class="d-block">Allocated For Transaction Fee</small>
              <small class="d-block"><%= indicative_bt_to_mint %></small>
            </p>
          </li>
          <li class="d-flex align-items-center mb-3">
            <span class="ost-supply staked-minting"></span>
            <p class="m-0 ml-2">
              <small class="d-block">OST to be staked for minting tokens</small>
              <small class="d-block"><%= indicative_stp_to_mint %></small>
            </p>
          </li>
        </ul>
      </div>
    </div>
    <div class="row">
      <div class="col-12">
        <button type="submit" class="btn btn-gold-border">Cancel</button>
        <button type="submit" class="btn btn-gold">Mint Tokens</button>
      </div>
    </div>
  </div>
</div>