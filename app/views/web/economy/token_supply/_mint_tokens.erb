    <h3 class="mb-3">Mint Tokens</h3>
  </div>
</div>
<div class="row">
  <div class="col-12">
    <div class="row">
      <div class="col-12 col-sm-4 st-form">
        <div class="form-group">
          <label class="form-label" for="tokens">TOKENS TO MINT</label>
          <input type="text" class="form-control" id="tokens" name="tokens"/>
        </div>
        <div class="card card-bg">
          <div class="card-body text-uppercase">
            <h5 class="card-title mb-1">TOKEN VALUE IN USD</h5>
            <p class="card-text mb-1">
              <span class="blue">750,000</span>
            </p>
          </div>
        </div>
      </div>
      <div class="col-12 col-sm-4 st-form">
        <h6>OST SUPPLY</h6>
      </div>
      <div class="col-12 col-sm-4">
        <h6 class="invisible">OST SUPPLY</h6>
        <ul>
          <li class="d-flex align-items-center mb-3">
            <span class="ost-supply available"></span>
            <p class="m-0 ml-2">
              <small class="d-block">OST Available</small>
