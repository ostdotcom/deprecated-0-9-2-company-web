<%
  delete_admin_endpoint = "/api/manager/super_admin/delete-admin"
  update_role_endpoint = "/api/manager/super_admin/update-super-admin-role"
  reset_mfa_endpoint = "/api/manager/super_admin/reset-mfa"
  resend_admin_invite = "/api/manager/super_admin/resend-admin-invite"

  user_id_name = "to_update_client_manager_id";
  is_super_admin_name = "is_super_admin";
%>

<div class="modal fade" id="deleteUserModal" tabindex="-1" role="dialog">
  <div class="modal-dialog modal-dialog-centered h-100 mx-auto my-0" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <form id="delete_user_form" class="user-form" action="<%= delete_admin_endpoint %>" method="POST">
        <div class="modal-body text-center">
          <h4>Are you sure you want to delete user?</h4>
          <div class="form-group">
            <input  type="hidden" required class="user-id form-control" name="<%= user_id_name%>"/>
            <div class="invalid-feedback" data-for="<%= user_id_name%>"></div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-primary" data-submiting="Deleting...">Yes</button>
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        </div>
        <div class="general_error invalid-feedback mt-2"></div>
      </form>
    </div>
  </div>
</div>

<div class="modal fade" id="resendInviteModal" tabindex="-1" role="dialog">
  <div class="modal-dialog modal-dialog-centered h-100 mx-auto my-0" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <form id="resend_invite_form" class="user-form" action="<%= resend_admin_invite %>" method="POST">
        <div class="modal-body text-center">
          <h4>Are you sure you want to resend user invite?</h4>
          <div class="form-group">
            <input  type="hidden" required class="user-id form-control" name="<%= user_id_name%>"/>
            <div class="invalid-feedback" data-for="<%= user_id_name%>"></div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-primary" data-submiting="Sending...">Yes</button>
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        </div>
        <div class="general_error invalid-feedback mt-2"></div>
      </form>
    </div>
  </div>
</div>


<div class="modal fade" id="unassignAdminModal" tabindex="-1" role="dialog">
  <div class="modal-dialog modal-dialog-centered h-100 mx-auto my-0" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <form id="unassign_user_form" class="user-form" action="<%= update_role_endpoint %>" method="POST">
        <div class="modal-body text-center">
          <h4>Are you sure you want to unassign super admin role form the user?</h4>
          <div class="form-group">
            <input  type="hidden" required class="user-id form-control" name="<%= user_id_name%>"/>
            <div class="invalid-feedback" data-for="<%= user_id_name%>"></div>
          </div>
          <div class="form-group">
            <input type="number" required class="is-super-admin form-control d-none" name="<%= is_super_admin_name%>"/>
            <div class="invalid-feedback" data-for="<%= is_super_admin_name%>"></div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-primary" data-submiting="Updating...">Yes</button>
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        </div>
        <div class="general_error invalid-feedback mt-2">&nbsp;</div>
      </form>
    </div>
  </div>
</div>


<div class="modal fade" id="assignAdminModal" tabindex="-1" role="dialog">
  <div class="modal-dialog modal-dialog-centered h-100 mx-auto my-0" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <form id="assign_user_form" class="user-form" action="<%= update_role_endpoint %>" method="POST">
        <div class="modal-body text-center">
          <h4>Are you sure you want to assign super admin role to the user?</h4>
          <div class="form-group">
            <input  type="hidden" required class="user-id form-control" name="<%= user_id_name%>"/>
            <div class="invalid-feedback" data-for="<%= user_id_name%>"></div>
          </div>
          <div class="form-group">
            <input type="number" required class="is-super-admin form-control d-none" name="<%= is_super_admin_name%>"/>
            <div class="invalid-feedback" data-for="<%= is_super_admin_name%>"></div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-primary" data-submiting="Updating...">Yes</button>
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        </div>
        <div class="general_error invalid-feedback mt-2">&nbsp;</div>
      </form>
    </div>
  </div>
</div>

<div class="modal fade" id="resetMfa" tabindex="-1" role="dialog">
  <div class="modal-dialog modal-dialog-centered h-100 mx-auto my-0" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <form id="reset_mfa_form" class="user-form" action="<%= reset_mfa_endpoint %>" method="POST">
        <div class="modal-body text-center">
          <h4>Are you sure you want to reset MFA?</h4>

          <div class="form-group">
            <input  type="hidden" required class="user-id form-control" name="<%= user_id_name%>"/>
            <div class="invalid-feedback" data-for="<%= user_id_name%>"></div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-primary" data-submiting="Resetting...">Yes</button>
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        </div>
        <div class="general_error invalid-feedback mt-2">&nbsp;</div>
      </form>
    </div>
  </div>
</div>


<div class="modal fade" id="successModal" tabindex="-1" role="dialog">
  <div class="modal-dialog modal-dialog-centered h-100 mx-auto my-0" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body text-center">
        <h4 class="success-msg"></h4>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary assign-admin" data-dismiss="modal">OK</button>
      </div>
    </div>
  </div>
</div>

