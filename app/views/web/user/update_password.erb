<form id="update_password_form" class="form-container-sm user-form"
  action="/api/client/login" method="POST"
  data-ost-formhelper data-redirect="/planner"
>
  <h1 class="form-title mb-4">Update Your Password</h1>
  <div class="form-group">
    <div class="clearfix">
      <label class="form-label float-left" for="password">Password</label>
      <span class="form-label float-right">Minimum 8 characters</span>
    </div>
    <input type="password" class="form-control" id="password" name="password" placeholder="Password" required pattern=".{8,}" />
    <div class="zxcvbn-group"></div>
    <div class="invalid-feedback" data-forid="password">&nbps;</div>
  </div>

  <div class="form-group">
    <label class="form-label" for="confirm_password">Confirm Password</label>
    <input type="password" class="form-control" id="confirm_password" name="confirm_password" placeholder="Confirm Password" required pattern=".{8,}" />
    <div class="invalid-feedback" data-forid="password">&nbps;</div>
  </div>

  <div class="form-group text-center mt-3">
    <button type="submit" class="btn btn-gold">Update Password</button>
  </div>
</form>

<div id="resetEmailSent" class="text-center">
  <h3>Your Password was Updated Successfully</h3>
  <p class="text-muted">You can now login to your account</p>
  <a href="javascript:void(0)" class="btn btn-gold mt-3" title="Login">login</a>
</div>

