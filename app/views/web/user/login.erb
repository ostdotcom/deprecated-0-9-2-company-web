<form class="form-container-sm st-form">
  <h1 class="form-title">Login to the Demo</h1>
  <div class="form-group">
    <label class="form-label" for="exampleInputEmail1">Email address</label>
    <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
  </div>
  <div class="form-group">
    <label class="form-label" for="exampleInputPassword1">Password</label>
    <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
    <small class="form-text">Forgot password?</small>
  </div>
  <div class="form-group text-center">
    <button type="submit" class="btn btn-gold">Login</button>
    <small class="form-text text-muted" style="line-height: 40px">Don't have an account yet?</small>
    <button type="submit" class="btn btn-white">Register</button>
  </div>
</form>

