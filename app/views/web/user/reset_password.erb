<form id="rest_password_form" class="form-container-sm user-form"
  action="/api/client/login" method="POST"
  data-ost-formhelper data-redirect="/planner"
>
  <h1 class="form-title">Reset Password</h1>
  <small class="form-text text-muted text-center" style="line-height: 40px">Enter your email address to receive the link to reset your password</small>
  <div class="form-group">
    <label class="form-label" for="email">Email address</label>
    <input type="email" class="form-control" id="email" name="email" 
    aria-describedby="emailHelp" placeholder="Email Address" name="email" required />
  </div>

  <div class="form-group text-center">
    <button type="submit" class="btn btn-gold mb-3" data-submiting="Logging">Recover</button>
    <br/>
    <button type="submit" class="btn btn-white">Return To Login</button>
  </div>
  
</form>

