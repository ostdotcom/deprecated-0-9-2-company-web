<form class="form-container-sm st-form">

  <h1 class="form-title">Register for the Demo</h1>
  
  <div class="form-group" id="emailFormGrp">
    <label class="form-label" for="email">Email address</label>
    <input type="email" name="email" class="form-control" id="email" aria-describedby="emailHelp" placeholder="Enter email">
  </div>

  <div class="form-group" id="passwordFormGrp">
    <label class="form-label" for="password">Password</label>
    <input type="password" name="password" class="form-control" id="password" placeholder="Password" />
    <!-- View Password -->
    <span class="input-group-btn">
      <button class="btn btn-default" type="button"><i class="fa fa-search"></i></button>
    </span>
    <!-- ZXCVBN Wrap -->
    <div class="zxcvbn-group"></div>
  </div>

  <div class="form-group has-error" id="tosFormGrp">
    <div class="form-check">
      <input type="checkbox" name="agreed_terms_of_service" class="form-check-input" id="tos">
      <label class="form-check-label" for="tos">By checking this box, you agree to our Terms of Service &amp; acknowledge and consent to our Privacy Policy.</label>
    </div>
  </div>

</form>

<div class="form-group text-center" >
  <button type="submit" class="btn btn-gold">Register</button>
  <small class="form-text text-muted" style="line-height: 40px">Have an account already?</small>
  <button type="submit" class="btn btn-white">Login</button>
</div>

