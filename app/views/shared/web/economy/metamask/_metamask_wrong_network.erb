<%
  is_mainnet = true;
  

  #Ropsten
  network_diaplay_name = rposten_network_diaplay = "Ropsten Test Network";
  banner_img_path = ropsten_img_path = "https://dxwfxs8b4lg24.cloudfront.net/ost-kit/images/wrong-network-modal-image.png";


  #Mainnet
  mainnet_network_diaplay = "Main Ethereum Network";
  # @Shradha: Change this image path. Get image from Jhuhi.
  mainnet_img_path = "https://dxwfxs8b4lg24.cloudfront.net/ost-kit/images/wrong-network-modal-image.png";

  if is_mainnet
    network_diaplay_name = mainnet_network_diaplay;
    banner_img_path = mainnet_img_path;
  end


%>

<div class="row ost__planner">
  <div class="col-12 pt-6">
    <h3 class="text-center font-weight-bold letter-space-1">Oops you’re on the wrong network</h3>
  </div>
</div>
<div class="row ost__planner">
  <div class="col-12 col-md-8 ml-auto mr-auto">
    <div class="text-center">
      <p class="ost__planner__desc font-weight-light mb-5">Please open MetaMask and switch over to <%= network_diaplay_name %></p>
      <img src="<%= banner_img_path %>" class="img-fluid" width="361" />
      <%=
          render :partial => "shared/web/common/faqs",
                 locals: {
            header: "FAQ for installing MetaMask",
            faqs: [
            {
              title: 'Why do I need to use Chrome and install MetaMask?',
          url: 'https://help.ost.com/support/solutions/articles/35000059263-why-do-i-need-to-install-metamask-'
          },
          {
            title: 'How do I unlock MetaMask?',
          url: 'https://help.ost.com/support/solutions/articles/35000059264-how-do-i-unlock-metamask-'
          },
          {
            title: 'Why can I use only one MetaMask account with OST KIT⍺?',
          url: 'https://help.ost.com/support/solutions/articles/35000059265-why-can-i-use-only-one-metamask-account-with-ost-kit%E2%8D%BA-'
          }
          ]
          }
      %>
    </div>
  </div>
</div>