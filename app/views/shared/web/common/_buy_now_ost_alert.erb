<%
  height_cls_name = "alert-height";
  # Test Net Configs -- Get Santosh to populate these values.
  min_ost_required = 1
  min_eth_required = 0.0010

  if GlobalConstant::Base.main_sub_environment?
    # Main Net Configs
    min_ost_required = 100
    min_eth_required = 0.0015
  end
%>
<div class="<%= height_cls_name %> ost__alert">
  <div class="row font-weight-light pt-1">
    <div class="col text-center p-2">
      <svg class="icon-banner align-middle">
        <switch>
          <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#icon-empty-tank"></use>
        </switch>
      </svg>
      <span class="ost__alert__text ml-1">Insufficient balance. Minimum <%= min_ost_required %> <%= ost_currency_symbol %>. and <%= min_eth_required %> ETH required. Please top up before minting more tokens. </span>
      <a href="/#token"  class="btn ost__alert__button font-weight-normal ml-2">BUY NOW</a>
    </div>
  </div>
</div>

<% content_for :phantom_header_el do %>
  <div class="<%= height_cls_name %>"></div>
<% end %>


