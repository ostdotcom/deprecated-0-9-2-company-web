<%
  height_cls_name = "alert-height";
%>
<div class="<%= height_cls_name %> ost__alert">
  <div class="row font-weight-light pt-1">
    <div class="col text-center p-2">
      <svg class="icon-banner align-middle">
        <switch>
          <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#icon-empty-tank"></use>
        </switch>
      </svg>
      <span class="ost__alert__text ml-1">You are running low on OST⍺. Please top up before minting more tokens.</span>
      <a href="javascript:void(0)" id="top-up-ost-btn" class="btn ost__alert__button font-weight-normal ml-2">TOP UP OST⍺</a>
    </div>
  </div>
</div>

<% content_for :phantom_header_el do %>
  <div class="<%= height_cls_name %>"></div>
<% end %>


<% content_for :end_js do %>
  <script type="text/javascript">
    (function () {
      $('#top-up-ost-btn').off('click').on('click' , function () {
        ost.metamask.getOstHelper.getOst( function () {
          window.location.reload(true);
        });
      });
    })();
  </script>
<% end %>